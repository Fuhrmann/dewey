{
  // Required
  "manifest_version": 2,
  "name": "Chrome bookmarks",
  "version": "0.1",

  // Recommended
  "description": "Helps to navigate through bookmarks (advanced search, custom tags)",

  "permissions": [
    "bookmarks", "history", "storage"
  ],

  "app": {
    "launch": {
      "local_path": "app.html"
    }
  },

  "icons": {
    "128": "bookmarks.png",
    "16": "favicon.png"
  },

  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}